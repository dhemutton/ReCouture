<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="319dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/pink_rounded_button" />

    <RelativeLayout
        android:layout_width="314dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp">

        <TextView
            android:id="@+id/tvConfirmSignout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Are you sure you want to sign out?"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnConfirmSignout"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvConfirmSignout"
            android:background="@drawable/light_pink_rounded"
            android:text="Sign Out"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="131dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/tvConfirmSignout"
            android:layout_alignParentBottom="true"
            android:background="@drawable/light_pink_rounded"
            android:text="Cancel"
            android:textSize="20sp" />


    </RelativeLayout>

    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signing Out..."
        android:textSize="20sp"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignLeft="@+id/progressBar"
        android:textColor="#000000"
        android:id="@+id/tvSigningOut"/>

</RelativeLayout>