<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:text="Required Details"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:text="Optional Details"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="276dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="226dp"
        android:background="@drawable/rect"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/editTextCategory"
        android:layout_width="278dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="237dp"
        android:background="@drawable/rect"
        android:ems="10"
        android:inputType="textAutoCorrect|textPersonName"
        android:hint="Category" />

    <EditText
        android:id="@+id/editTextColor"
        android:layout_width="279dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="169dp"
        android:background="@drawable/rect"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Colours" />

    <EditText
        android:id="@+id/editTextTags"
        android:layout_width="279dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:background="@drawable/rect"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Style Tags" />

    <TextView
        android:id="@+id/ProfileHeader"
        android:layout_width="383dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/pink"
        android:textSize="24sp"
        android:text="Add Item"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/addPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        app:srcCompat="@mipmap/ic_image" />

    <include layout="@layout/layout_bottom_navigation_view"/>

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/pink_rounded_button"
        android:text="Upload" />

</RelativeLayout>