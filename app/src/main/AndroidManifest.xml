<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recouture">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartUpPage.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartUpPage.LoginActivity" />
        <activity android:name=".StartUpPage.SignUpActivity" />
        <activity
            android:name=".HomePage.HomepageActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".Profile.ProfileActivity" />
        <activity android:name=".ShirtGallery.ShirtActivity" />
        <activity
            android:name=".Calendar.CalendarActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Likes.LikesActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Add.AddActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".ShirtGallery.click_shirt_activity" />
        <activity android:name=".Profile.EditProfileFragment" />
        <activity android:name=".ClickItemActivity" />
        <activity android:name=".utils.BaseActivity" />
    </application>

</manifest>